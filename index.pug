doctype html
html(lang="de")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="description" content="Konvertiere Daten zu Text")
    link(rel="stylesheet" href="assets/css/styles.css")
    //- link(rel="canonical" href="/")
    //- link(rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96")
    //- link(rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png")
    title Date to text

  body

    header
      h1.container Convert date to text
    .card.container.first-card
      main
        .row
          form(id="form")
            label(for="datum") Date
            input(type="text" name="datum" id="datum" value="")
          .half
            label Result
            textarea#result
      footer
        .disclaimer According to <a href="http://dictionary.cambridge.org/grammar/british-grammar/dates">Cambridge Dictionary</a>
    .card.container.info
      p Select the text field for the date and hit enter. The result will be copied to your clipboard.

    script(src="assets/js/function.js")
